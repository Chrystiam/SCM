<%- model_class = Acta -%>

<div class="buscador">
    <div class="row-fluid">
      <div class="row-fluid">
        <div class="span6">
          <%= form_tag request.path, :method => 'get' do %>
            <%= content_tag :label do %>
              <h4>Buscar:</h4>
              <%= text_field_tag :search, params[:search], :id=>'efecto1' %>
              <%= submit_tag "Consultar", :fecha => nil, :class=>"btn btn-info btn-mini", :id=>'efecto1' %>
            <% end %>
          <% end %>

          <div class="span6">
            <%= form_tag request.path, :method => 'get' do %>
              <%= content_tag :label do %>
                <h4>Numero Registros:</h4>
                <%= text_field_tag :registro, params[:registro], :class =>'input-mini', :title => "ingresa el dato y preciona enter",:id=>'efecto1' %>
               <% end %>
            <% end %>
          </div>
        </div>
        <div class="colorp">
          <h1>Actas</h1>
        
          <p>
           Total Actas: <%= @actas.total_entries %>
          </p>
          <br>
          <br>
          <br>
        </div>
      </div>
  </div>
</div>
<br>
<table class="table table-bordered table-hover pretty">
  <thead>
    <tr>  
      <th><%= sortable "id" %></th> 
      <th><%= sortable "fecha" %></th>
      <th><%= sortable "hora_inicio" %></th> 
      <th><%= sortable "hora_terminacion" %></th> 
      <th>Lugar</th>
      <th>Nombre Aprendices</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <%= render @actas %>
  </tbody>
</table>

<div align="center">
  <%= will_paginate @actas, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente
  &raquo;' %>
</div>

