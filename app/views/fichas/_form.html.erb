<%= simple_form_for([@programa,@ficha], :html => { :class => 'form-horizontal' }, :remote => true) do |f| %>
  <%= f.input :codigo %>
  <%= f.input :estado %>
  <div class="form-actions">
    <%= f.submit "Guardar", :class => 'btn btn-primary' %>
    <%= link_to 'Atras', programa_fichas_path(@programa), :class => 'btn btn-default' %>
  </div>
<% end %>