<%- model_class = Programa -%>

<h1>Programas</h1>
<%= form_tag request.path, :method => 'get' do %>
  <%= content_tag :label do %>
    Programa:
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Consultar", :descripcion => nil %>
  <% end %>
<% end %>

<%= form_tag request.path, :method => 'get' do %>
  <%= content_tag :label do %>
     Numero Registros:
    <%= text_field_tag :registro, params[:registro], :class =>'input-mini' %>
   <% end %>
<% end %>

<p>
Total Programas : <input type="text" id="totalregs" class="span1" value="<%= @programas.total_entries %>"readonly /></h4>
</p>

<table class="table table-bordered pretty">
  <thead>
    <tr>
      <th><%= sortable "id" %></th>
      <th><%= sortable "descripcion" %></th>
      <th><%= sortable "abreviatura" %></th>
      <th><%= sortable "centro_id" %></th>
      <th><%= sortable "estado" %></th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <%= render @programas %>
  </tbody>
</table>
<%= link_to 'Nuevo Programa', new_centro_coordinador_programa_path(@centro,@coordinador), :class => 'btn btn-mini btn-primary', :remote => true %>
<%= link_to 'Atras', centro_coordinadores_path,  :class => 'btn btn-mini' %> 

<div align="center">
  <%= will_paginate @programas, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente
  &raquo;' %>
</div>



