<%- model_class = Cargo -%>
<br><br><br>
<h1>Cargos</h1>
<br>
<%= form_tag request.path, :method => 'get' do %>
  <%= content_tag :label do %>
    Descripcion:
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Consultar", :descripcion => nil %>
  <% end %>
<% end %>

<%= form_tag request.path, :method => 'get' do %>
  <%= content_tag :label do %>
    Numero Registros:
    <%= text_field_tag :registro, params[:registro], :class =>'input-mini' %>
   <% end %>
<% end %>

<p>
Total Cargos : <input type="text" id="totalregs" class="span1" value="<%= @cargos.total_entries %>"readonly /></h4>
</p>

<table class="table table-bordered table-hover pretty">
  <thead>
    <tr>  
      <th><%= sortable "id" %></th>
      <th><%= sortable "descripcion" %></th> 
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <%= render @cargos %>
  </tbody>
</table>
<%= link_to 'Nuevo Cargo', new_cargo_path, :class => 'btn btn-primary', :remote => true %>

<div align="center">
  <%= will_paginate @cargos, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente
  &raquo;' %>
</div>

