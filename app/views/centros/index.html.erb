<%- model_class = Centro -%>

<h1>centros</h1>

<%= form_tag request.path, :method => 'get' do %>
  <%= content_tag :label do %>
    centro:
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Consultar", :nombre => nil %>
  <% end %>
<% end %>

<%= form_tag request.path, :method => 'get' do %>
  <%= content_tag :label do %>
    Numero Registros:
    <%= text_field_tag :registro, params[:registro], :class =>'input-mini' %>
   <% end %>
<% end %>

<p>
Total centros : <input type="text" id="totalregs" class="span1" value="<%= @centros.total_entries %>"readonly /></h4>
</p>

<table class="table table-bordered table-hover pretty">
  <thead>
    <tr>  
      <th><%= sortable "id" %></th>
      <th><%= sortable "nombre" %></th> 
      <th><%= sortable "abreviatura" %></th> 
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <%= render @centros %>
  </tbody>
</table>
<%= link_to 'Nuevo centro', new_centro_path, :class => 'btn btn-primary', :remote => true %>

<div align="center">
  <%= will_paginate @centros, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente
  &raquo;' %>
</div>


