<%= simple_form_for(@user, :html => { :class => 'form-horizontal offset3' }, :remote => true)  do |f| %>

  <% if @user.errors.any? %>
   <div class="error_messages">
     <h2>Form is invalid</h2>
     <ul>
       <% for message in @user.errors.full_messages %>
         <li><%= message %></li>
       <% end %>
     </ul>
   </div>
 <% end %>

  
  <div id="tamano">
    <div id="registration"> 
      <h2>Crear usuario </h2>
      <div class="field control-group">
        <%= f.label :nombre, :class => 'control-label' %>
        <div class ="controls">
         <%= f.text_field :nombre %>
        </div> 
      </div>

      <div class="field control-group">
        <%= f.label :username, :class => 'control-label ' %>
        <div class ="controls">
         <%= f.text_field :username %>
        </div> 
      </div>

      <div class="field control-group">
        <%= f.label :email, :class => 'control-label '  %>
        <div class ="controls">
         <%= f.text_field :email %>
        </div> 
      </div>
      <div class="field control-group">
        <%= f.label :password, :class => 'control-label ' %>
        <div class ="controls">
         <%= f.password_field :password %>
        </div> 
      </div>
      <div class="field control-group">
        <%= f.label :password_confirmacion %>
        <div class ="controls">
         <%= f.password_field :password_confirmation %>
        </div>
      </div> 
     
      <div class="control-group">
        <div class ="controls">
          <%= f.submit 'guardar', :class => 'btn btn-primary'%>
          <%= link_to 'Atras', users_path, :class => 'btn btn-default' %>
        </div>
      </div> 
    </div>
  </div>
<% end %>
