<%- model_class = Prioridad -%>
<br><br><br>
<h1>prioridades</h1>
<br>
<%= form_tag request.path, :method => 'get' do %>
  <%= content_tag :label do %>
    Nombre:
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Consultar", :nombre => nil %>
  <% end %>
<% end %>

<%= form_tag request.path, :method => 'get' do %>
  <%= content_tag :label do %>
     Numero Registros:
    <%= text_field_tag :registro, params[:registro], :class =>'input-mini' %>
   <% end %>
<% end %>

<p>
Total prioridades : <input type="text" id="totalregs" class="span1" value="<%= @prioridades.total_entries %>"readonly /></h4>
</p>

<table class="table table-bordered pretty">
  <thead>
    <tr>
      <th><%= sortable "nombre" %></th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <%= render @prioridades %>
  </tbody>
</table>
<%= link_to 'Nueva prioridad', new_prioridad_path, :class => 'btn btn-primary', :remote => true %>

<div align="center">
  <%= will_paginate @prioridades, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente
  &raquo;' %>
</div>