<%= javascript_include_tag "fecha.js" %>
<%= simple_form_for(@comite, :html => { :class => 'form-horizontal' }, :remote => true) do |f| %>
  <%= f.error_notification %>

  <div class="responsive">
    <div class="modal-body">  
      <div class="control-group">
        <div class="row" id ="colors">
          <div class= "span6"> 
            <center><h4>Información del comite</h4></center>
            <hr>
            <%= f.label :fecha %>
            <%= f.input :fecha, :as => :string, :label => false, :input_html => {  :class=>"datepicker" } %>
            
              
                <div class =" input-append bootstrap-timepicker offset2">
                   
                      <%= f.input_field :hora, :as => :string, :class => "time_picker input-small"%>
                      <span class="add-on"><i class="icon-time"></i></span>
                  
                </div>
              
           
            <%= f.input :lugar %>
          </div>

          <center><h4>Información del Aprendiz</h4></center>
          <hr>

          <div class ="span6">
            <div class="row">
              <div class ="control-group">
                <%= f.label :Nombre_Aprendiz %>
                <div class="controls" >
                  <%= f.collection_select :queja_id, Queja.all, :id, :nombres, :prompt => "Seleccione un nombre" %>
                </div>
              </div>

              <div class ="control-group">
                <%= f.label :falta %>
                <div class="controls" >
                  <%= f.collection_select :falta_id, Falta.all, :id, :descripcion, :prompt => "Seleccione" %>
                </div>
              </div>
            </div>
            
            <div class ="control-group">
                <%= f.label :prioridad %>
                <div class="controls" >
                  <%= f.collection_select :prioridad_id, Prioridad.all, :id, :nombre, :prompt => "Seleccione la prioridad" %>
                </div>
              </div>
          </div>

          <div class= "span12">
            <div class="form-actions">
            	<%= f.submit "Guardar", :class => 'btn btn-primary' %>
              <%= link_to 'Atras', comites_path, :class => 'btn btn-default' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
