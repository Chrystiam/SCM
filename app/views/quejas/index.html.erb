<%- model_class = Queja -%>

<div class="buscador">
  <h1 class="h1">Quejas</h1>
  <%= form_tag request.path, :method => 'get' do %>
    <%= content_tag :label do %>
      <p>
      Nombres Aprendiz:
      <%= text_field_tag :search, params[:search], :id=>'efecto1' %>
      <%= submit_tag "Consultar", :nombres => nil, :class=>"btn btn-info btn-mini", :id=>'efecto1'%>
      </p>
    <% end %>
  <% end %>
  <div id="regi">
    <%= form_tag request.path, :method => 'get' do %>
      <%= content_tag :label do %>
        Numero Registros:
        <%= text_field_tag :registro, params[:registro], :class =>'input-mini', :title => "ingresa el dato y preciona enter",:id=>'efecto1' %>
       <% end %>
    <% end %>
  </div>
  
  <p id="qest" >
    Quejas en Estado de Espera: <%= @estadoquejas.count %>
  </p>
  
  <p id="qrem"> 
    Quejas Remitidas a Comite: <%=  "#{@estadoencomite.count}" %>
  </p>

  <p id="qcorr">
    Quejas en correccion: <%= "#{@quejacorreccion.count }"%>
  </p>

</div>
<br>
<table  class="table table-bordered table-condensed table-hover pretty">
  <thead>
    <tr>
      <th><%= sortable "id", "NÂ°Queja"%></th>
      <th><%= sortable "created_at", "Fecha"%></th>
      <th><%= sortable "nombres" %></th>
      <th><%= sortable "apellidos" %></th>
      <th><%= sortable "programa_id", "Programa" %></th>
      <th><%= sortable "Ficha" %></th>
      <th><%= sortable "falta" %></th>
      <th><%= sortable "estado_id", "Estado" %></th> 
		  <th>Acciones</th>
    </tr>
  </thead>
  <tbody >
    <%= render @quejas %>
  </tbody>
</table>

<%= link_to 'Nueva Queja', new_queja_path, :class => 'btn btn-primary', :remote => true %>

<div align="center">
  <%= will_paginate @quejas, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente
  &raquo;' %>
</div>

