<%- model_class = Fcomite -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:fecha) %></th>
      <th><%= model_class.human_attribute_name(:lugar) %></th>
      <th><%= model_class.human_attribute_name(:tipo) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @fcomites.each do |fcomite| %>
      <tr>
        <td><%= link_to fcomite.id, fcomite_path(fcomite) %></td>
        <td><%= fcomite.fecha %></td>
        <td><%= fcomite.lugar %></td>
        <td><%= fcomite.tipo %></td>
        <td><%=l fcomite.created_at %></td>
        <td><%= link_to 'Detalle Comite', fcomite_comites_path(fcomite), :class => 'btn btn-inverse' %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_fcomite_path(fcomite), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      fcomite_path(fcomite),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_fcomite_path,
            :class => 'btn btn-primary' %>
