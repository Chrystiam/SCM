<div class="centeruser">
  <%= simple_form_for([@fcomite, @comite, @usercomite], :html => { :class => 'form-horizontal' }, :remote => true) do |f| %>
    <div class="responsive">
      <div class="modal-body">  
        <div class="control-group">
          <div class="row" id ="colors">
            <div class= "span6"> 
              <center><h4>Miembros Del Comite</h4></center>
              <hr>
              <div class="form-inputs">
                <%= f.input :nombre %>
                <%= f.input :email %>
               
               
                <div class ="control-group">
                  <%= f.label :cargo_id %>
                  <div class="controls" >
                    <%= f.collection_select :cargo_id, Cargo.all, :id, :descripcion, :prompt => "Seleccione" %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
          <%= f.submit "Guardar", :class => 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>  